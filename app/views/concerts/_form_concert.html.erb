<%= flash_message %>

<% if @concert.errors.any? %>
  <ul>
    <% @concert.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>


<%= form_for [@concert] do |f| %>
  <%= f.label :band %>
  <%= f.text_field :band %>
  <br>
  <%= f.label :venue %>
  <%= f.text_field :venue %>
  <br>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <br>
  <%= f.label :date %>
  <%= f.date_field :date %>
  <br>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <br>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <br>
  <%= f.submit 'Save' %>
  <%#= link_to("Cancel", project_entries_path(@project)) %>
<% end %>